<Page
    x:Class="HabitTracker.Auth"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HabitTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" VerticalAlignment="Center">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="35" />
            <RowDefinition Height="49"  />
            <RowDefinition Height="60"  />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='1' Grid.Row="0" Grid.Column="0" x:Name="form" HorizontalAlignment="Left"  TextWrapping="NoWrap"  Text="Auth" VerticalAlignment="Top" Height="32" Width="66" FontSize="21.333"                                          Margin="45,0,0,0"/>
        <TextBlock x:ConnectionId='2' Grid.Row="1" Grid.Column="0" x:Name="Username" HorizontalAlignment="Left"  TextWrapping="NoWrap"  Text="Username" VerticalAlignment="Top" Height="34" Width="100" FontSize="21.333" Margin="45,0,0,0" Grid.RowSpan="2"/>
        <TextBox x:ConnectionId='3' Grid.Row="2" Grid.Column="0" x:Name="usernameBlock" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="username" VerticalAlignment="Top" Width="164" Height="32" Margin="45,3,0,0"/>
        <TextBlock x:ConnectionId='4' Grid.Row="3" Grid.Column="0" x:Name="Password" HorizontalAlignment="Left"  TextWrapping="NoWrap"  Text="Password" VerticalAlignment="Top" Height="34" Width="111" FontSize="21.333" Margin="45,0,0,0"/>
        <PasswordBox x:ConnectionId='5' Grid.Row="4" Grid.Column="0" x:Name="passwordBlock" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="174" Height="32" Margin="45,10,-10,0"/>
        <Button x:ConnectionId='6' Grid.Row="5" Grid.Column="0" x:Name="signIn" Content="Sign In"  HorizontalAlignment="Left"  VerticalAlignment="Top"                      Height="31" Width="66" Padding="8,4,10,4" Margin="45,15,0,0"/>
        <Button x:ConnectionId='7' Grid.Row="5" Grid.Column="0" x:Name="signUp" Content="Sign Up" HorizontalAlignment="Left" VerticalAlignment="Top"                      Height="31" Width="72" Margin="137,15,0,0"/>
        <Button x:ConnectionId='8' Grid.Row="6" Grid.Column="0" x:Name="button" Content="Dashboard" HorizontalAlignment="Left" Margin="45,8,0,0" VerticalAlignment="Top"                     />
    </Grid>
</Page>

