<Page
    x:Class="HabitTracker.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HabitTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Right" Width="360">

        <Grid x:ConnectionId='1' x:Name="mainGrid" Background="AliceBlue"  HorizontalAlignment="Left" Height="515" VerticalAlignment="Top" Width="359" Margin="0,0,-350,-515">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="180"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Daily Checkin"  HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="10.667" Margin="3,0" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Habit"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10.667" Margin="3,0"   />
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Remind"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10.667" Margin="3,0"  />
            <TextBlock Grid.Row="0" Grid.Column="3" Text="Due"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10.667" Margin="3,0"  />
            <TextBlock Grid.Row="0" Grid.Column="4" Text="Current Streak"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10.667" Margin="3,0"  />
            <TextBlock Grid.Row="0" Grid.Column="5" Text="Record Streak"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10.667" Margin="3,0"  />
            <TextBlock Grid.Row="0" Grid.Column="6" Text="Edit Habit!"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10.667" Margin="1,0,3,0"  />
        </Grid>
        <TextBlock x:ConnectionId='2' x:Name="TestData" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="Test" VerticalAlignment="Top" Width="62" Margin="134,577,-134.333,-577"/>

    </RelativePanel>
</Page>

